<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp">

    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Residential Address"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/residential_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="48dp"
        android:hint="Enter Residential Address"
        android:minLines="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permanent Address"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="16dp"/>

    <EditText
        android:id="@+id/permanent_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="48dp"
        android:hint="Enter Permanent Address"
        android:minLines="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="City"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="State"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <EditText
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:layout_weight="1"
            android:hint="Enter City" />

        <EditText
            android:id="@+id/state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:layout_weight="1"
            android:hint="Enter State" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aadhar Number"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/aadhar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="48dp"
            android:hint="Aadhar Number" />
        <TextView
            android:id="@+id/aadhar_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No file chosen"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/upload_aadhar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE"
            android:layout_marginEnd="5dp"
            android:textColor="#ffffff"
            android:background="#0000FF"
            android:layout_marginStart="16dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/textView_panCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAN Card Number:"
        android:textSize="20sp"

        android:layout_marginTop="6dp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/pan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="48dp"
            android:hint="Pan Number" />
        <TextView
            android:id="@+id/pancard_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No file chosen"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/upload_pancard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE"
            android:layout_marginEnd="5dp"
            android:textColor="#ffffff"
            android:background="#0000FF"
            android:layout_marginStart="16dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/text_educational_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Educational Certificate"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <Spinner
            android:id="@+id/spinner_qualification"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:entries="@array/qualifications_array"
            android:layout_below="@+id/text_educational_certificate" />
        <EditText
            android:id="@+id/edit_text_other_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter other qualification"
            android:visibility="gone" />
        <TextView
            android:id="@+id/certificate_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No file chosen"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/upload_certificate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE"

            android:textColor="#ffffff"
            android:background="#0000FF"

            />
    </LinearLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"

        android:text="Submit"
        android:textColor="#ffffff"
        android:background="#0000FF"

        android:layout_marginStart="150dp"
        android:layout_marginEnd="16dp" />


</LinearLayout>