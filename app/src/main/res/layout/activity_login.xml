<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/welcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <EditText
    android:id="@+id/username"
    android:layout_width="315dp"
    android:layout_height="48dp"
    android:hint="@string/mobile_no_email_id_user_id"
        android:textColorHint="@color/light_blue"
    android:inputType="text"
        android:textColor="@color/black"
        android:layout_marginStart="44dp"
    android:background="@drawable/capsule_shape"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.01"
    app:layout_constraintTop_toBottomOf="@+id/welcomeBack"
    app:layout_constraintVertical_bias="0.046"
    android:drawableStart="@drawable/baseline_person_24"
    tools:layout_editor_absoluteX="-16dp"
    android:autofillHints="user" />

    <EditText
        android:id="@+id/password"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:autofillHints="password"
        android:textColor="@color/black"
        android:background="@drawable/capsule_shape"
        android:drawableStart="@drawable/baseline_key_24"
        android:hint="@string/password"
        android:textColorHint="@color/light_blue"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.043" />

    <CheckBox
        android:id="@+id/checkbox_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:onClick="onCheckboxClicked"
        android:text="@string/accept_terms_amp_conditions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:background="@drawable/capsule_shape"
        android:text="Login"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676" />

    <TextView
        android:id="@+id/dont_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="@string/don_t_have_account_createaccount"
        android:textColor="@color/linkcolor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767" />

</androidx.constraintlayout.widget.ConstraintLayout>
